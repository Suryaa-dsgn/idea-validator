# Server Configuration
PORT=8080
NODE_ENV=production

# MongoDB Configuration - Set in Render dashboard
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority

# JWT Configuration - Set in Render dashboard if needed
JWT_SECRET=your_jwt_secret_key

# AI Services
COHERE_API_KEY=your_cohere_api_key

# Email Service
EMAIL_USERNAME=your_email_username
EMAIL_PASSWORD=your_email_password

# JWT Authentication
# Generate a secure random string for JWT_SECRET
JWT_EXPIRES_IN=7d

# Cohere AI Configuration
# Get your API key from https://dashboard.cohere.com/api-keys
COHERE_MODEL=command  # Free tier model

# Email Configuration (Nodemailer with Gmail)
EMAIL_SERVICE=gmail
EMAIL_FROM="Your App Name <your_gmail_address@gmail.com>"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # 100 requests per window

# Logging
LOG_LEVEL=info 